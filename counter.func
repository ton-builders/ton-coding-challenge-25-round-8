int counter = 0;
() recv_internal(slice in_msg, cell in_msg_body, int msg_value, int msg_bounced) {
  int op_code = in_msg_body~load_uint(32);
  int amount = in_msg_body~load_uint(32);
  switch (op_code) {
    case 1: {
      counter += amount;
    }
    case 2: {
      counter -= amount;
    }
    default: {
      // ignore unknown opcodes
    }
  }
}
